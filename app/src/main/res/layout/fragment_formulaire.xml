<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ECE7E5"
    android:gravity="center_horizontal"
    android:padding="10dp"
    tools:context=".FormulaireFragment"
    >

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:gravity="center"
        android:paddingHorizontal="20dp"
        android:textColor="@color/black"
        android:text="Veuillez remplir les informations suivantes"
        />
    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:textSize="20sp"
            android:hint="adresse"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:hint="Superficie"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"
            />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:hint="Nombre de chambres"
            android:id="@+id/spinner"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:hint="Prix"
            />

    </LinearLayout>


    <Space
        android:layout_width="match_parent"
        android:layout_height="90dp"
        />
    <Button
        android:id="@+id/button_estimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:background="#DD6F4D"
        android:text="Estimer"
        android:textColor="@color/white"
        android:textSize="25sp"
        />
</LinearLayout>